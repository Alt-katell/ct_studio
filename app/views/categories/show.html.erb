<div class="category_show_title">
  <h2><strong><%= @category.name %></strong></h2>
  <p>Textures, shapes and colors <br>
  ndefinable styles to make a unique statement.</p>
</div>

<div class="search">
  <div class="search_keyword">
    <p><strong>Search by keyword</strong></p>
    <!-- <input class="search-bar" type="text" placeholder="Search designs">
 -->
<%= form_tag category_path(@category), method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search designs"
  %>
<% end %>





  </div>

  <div class="search_colors">
    <p><strong>Search by color</strong></p>
    <div class="colors_btn">
      <% colors = ['red', 'yellow', 'blue', 'green', 'pink', 'black'] %>
      <% colors.each do |color| %>
        <a href="/categories/<%= @category.id %>?query=<%= color %>">
          <i class="fas fa-circle" style="color: <%= color %>"></i>
        </a>
      <% end %>
    </div>
  </div>
</div>

<div class="grid-container">
  <% @designs.each do |d| %>
    <% unless d.sold %>
      <%= link_to(design_path(d.id, { category: @category.name })) { %>
          <div class="design-card">
            <div class ="design-img">
              <img src="<%= cl_image_path d.photo.key, width: 400, height: 250, crop: :fill %>" alt="design ">
            </div>
            <div class="design-info d-flex justify-content-between">
              <div class="tit">
                <h5><%= d.name %></h5>
              </div>
              <div class="flex-part">
                <div class="price">
                  <h5><%= d.price %>$</h5>
                </div>
                <% if current_user == d.user  %>
                  <div class="sold">
                      <i class="fas fa-star" style="color:black"></i>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% } %>
      <% end %>
  <% end %>
</div>
