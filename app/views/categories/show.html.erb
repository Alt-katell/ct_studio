<div class="container">
  <div class="category_show_title">
    <h2><strong>All designs of a category</strong></h2>
    <p>Textures, shapes and colors</p>
    <p>Undefinable styles to make a unique statement.</p>
  </div>

  <div class="backlink"><%= link_to "> Back to category list", categories_path %></div>

  <div class="search">
    <div class="search_keyword">
      <p><strong>Search by keyword</strong></p>
      <input id="search-bar" type="text" placeholder="Search designs">
    </div>

    <div class="search_colors">
      <p><strong>Search by color</strong></p>
      <div class="colors_btn">
        <% colors = ['red', 'yellow', 'blue', 'green', 'pink', 'black'] %>
        <% colors.each do |color| %>
          <i class="fas fa-circle" style="color: <%= color %>"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="my-container">

  <% @designs.each do |d| %>
  <% unless d.sold %>
    <%= link_to(design_path(d.id)) { %>
        <div class="des-card">
          <div class ="d-img" style="background-image: url('<%= cl_image_path d.photo.key %>')"></div>
          <div class="info d-flex justify-content-between">
            <div class="tit">
              <h5><%= d.name %></h5>
            </div>
            <div class="price">
              <h5><%= d.price %>$</h5>
            </div>
          </div>
        </div>
      <% } %>
    <% end %>
  <% end %>
</div>
