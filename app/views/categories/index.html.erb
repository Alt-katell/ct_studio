<div class="category_show_title">
  <h2><strong>The Pattern Show</strong></h2>
  <p>
    Explore our catalog <br>
    and find the perfect print for your products
  </p>
</div>

<div class="grid-container">
  <% @categories.each do |c| %>
    <%= link_to(category_path(c.id), class: 'category-card') do %>
    <div class="category-img-box">
      <img src="<%= image_url "ctstudio-#{c.name.upcase}.jpg" %>" alt="cat image">
    </div>
    <h5><%= c.name %></h5>
    <% end %>
  <% end %>
</div>
