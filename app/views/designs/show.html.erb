<div class="container">
  <div class="design_card">
    <div class="design_img">
      <%= cl_image_tag @design.photo.key %>
    </div>
    <div class="informations">
      <div class="design_title">
        <h1><%= @design.name %></h1>
        <h2><%= @design.price %></h2>
      </div>
      <div class="design_info">
        <div class="compart">
          <p>Designer : <%= @design.user.first_name %> <%= @design.user.last_name %></p>
          <p>Layers : <%= @design.layers %></p>
        </div>
        <div class="compart">
          <p>File resolution: 300 dpi</p>
          <p>Fyle type : <%= @design.file_type %></p>
        </div>
        <div class="compart">
          <p>Categories : <% @design.categories.each do |cat| %>
              <%= cat.name  %>
            <% end %>
          </p>
          <p>
            Keywords : <% @design.tags.each do |tag| %>
              <%= tag.name  %>
            <% end %>
          </p>
          <p>Created at: <%= @design.created_at.strftime("%Y-%m-%d") %></p>
        </div>
      </div>
      <% if current_user.company %>
        <div class="btn_compart">
          <%= link_to "Buy", design_purchases_path(@design), method: :post, class: "button" %>
        </div>
      <% else %>
        <% if @design.user == current_user %>
          <div class="btn_compart">
            <%= link_to "Update your design", edit_design_path(@design), class: "button mr-3" %>
            <%= link_to "Delete your design", design_path(@design), class: 'button ml-3' %>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
    <%= link_to "Back to 'My Designs' ", categories_path, class: 'button mb-6' %>
  </div>
</div>
