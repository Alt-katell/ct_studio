<div class="sign-in-main-container" style="background-image: url(<%= image_url "ctstudio_sign_in_low_quality.jpg"  %>)">
  <div class="sign-in-info">
    <div class="category_show_title">
      <img src="<%= image_url "ctstudio_logo_white.png" %>" width="" alt="logo">
      <h3><span id="login-typed-text"></span></h3>
    </div>
  </div>

  <div class="sign-in-container">
    <div class="form-style">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"button" %>
        </div>
      <% end %>
      <div id="login-btns">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
